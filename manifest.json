{
  "manifest_version": 3,
  "name": "YouTube Window Fullscreen",
  "description": "Do you want to resize a YouTube video to the full size of your browser window? This extension does exactly that!",
  "version": "0.1.0",
  "author": "Florin Gro√üe",
  "action": {
    "default_icon": "resources/icons/logo.png",
    "default_title": "YouTube Window Fullscreen"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "css": ["stylesheets/style.css"],
      "js": ["js/main.js"]
    }
  ],
  "icons": {
    "1080": "resources/icons/logo.png",
    "64": "resources/icons/logo64.png",
    "128": "resources/icons/logo128.png",
    "256": "resources/icons/logo256.png",
    "512": "resources/icons/logo512.png"
  }
}
